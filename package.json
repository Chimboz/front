{
  "name": "chimboz-front",
  "version": "0.1.0",
  "description": "Chimboz front using Nuxt",
  "keywords": [
    "nuxt",
    "node",
    "typescript",
    "ts",
    "chapatiz",
    "chimboz",
    "muniz"
  ],
  "homepage": "https://github.com/Chimboz/ChimbozFront",
  "bugs": {
    "url": "https://github.com/Chimboz/ChimbozFront/issues"
  },
  "license": "CECILL-2.1",
  "author": {
    "name": "Tigriz",
    "url": "https://github.com/Tigriz"
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "validate-branch-name": {
    "pattern": "^(main|develop)$|^(feature|bugfix|hotfix|chore|experiment)\\/([a-z\\d-]{1,30})$",
    "errorMsg": "Branch name format : <type>/<ticket_id>-<name>"
  },
  "scripts": {
    "commit": "git-cz",
    "prepare": "husky install",
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "clean": "nuxi clean",
    "upgrade": "nuxi upgrade",
    "type:check": "vue-tsc",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "i18n:report": "vue-i18n-extract",
    "optimize": "pngquant -f --skip-if-larger --speed 1 -v --ext .png public/**/*.png src/assets/img/**/*.png && npx svgo -rf src/assets/img --multipass && svgo -rf public/announce --multipass && svgo -rf public/blazon --multipass && svgo -rf public/emoticon --multipass && svgo -rf public/item --multipass "
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@commitlint/cz-commitlint": "^17.4.2",
    "@nuxt/devtools": "^0.4.0",
    "@nuxtjs/color-mode": "^3.2.0",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@nuxtjs/i18n": "^8.0.0-beta.9",
    "@types/dompurify": "^3.0.0",
    "@types/jsdom": "^21.1.0",
    "@types/marked": "^4.0.8",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "commitizen": "^4.3.0",
    "eslint": "^8.35.0",
    "eslint-plugin-vue": "^9.8.0",
    "husky": "^8.0.3",
    "inquirer": "^8.2.5",
    "lint-staged": "^13.2.1",
    "mitt": "^3.0.0",
    "nuxt": "^3.4.1",
    "prettier": "^2.8.2",
    "sass": "^1.61.0",
    "typescript": "^5.0.2",
    "validate-branch-name": "^1.3.0",
    "vite-plugin-eslint": "^1.8.1",
    "vue-i18n-extract": "^2.0.7",
    "vue-tsc": "^1.0.24"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.4.8",
    "@radial-color-picker/vue-color-picker": "^5.0.1",
    "@rushstack/eslint-patch": "^1.2.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "chart.js": "^3.9.1",
    "date-fns": "^2.29.3",
    "dompurify": "^3.0.0",
    "highlight.js": "^11.7.0",
    "jsdom": "^21.0.0",
    "marked": "^4.2.5",
    "modern-normalize": "^1.1.0",
    "pinia": "^2.0.34",
    "v-lazy-image": "^2.1.1",
    "vue-chart-3": "^3.1.8"
  },
  "overrides": {
    "vue": "latest"
  }
}
